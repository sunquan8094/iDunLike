{
  "manifest_version": 2,
  "name": "iDunLike",
  "description": "This extension removes whatever posts you want from your Facebook news feed.",
  "version": "0.1",
  "options_page": "options.html",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["js/jquery-2.1.4.js", "js/filter.js", "js/regex_opto.js"],
      "run_at": "document_idle",
			"all_frames": false
    }
  ],
	"icons": {
		"32": "icon32.png",
		"48": "icon48.png"
	}
}
